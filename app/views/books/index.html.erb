<h1>Books</h1>

<table class="index">
    <tr class="index-head">
        <th class="index-title">Title</th>
        <th class="index-body">Body</th>
        <th class="empty"></th>
    </tr>
    <% Book.all.each do |book| %>
    <tr class="index-contents">
        <td class="index-title">
        <%= book.title %>
        </td>
        <td class="index-body">
        <%= book.body %>
        </td>
        <td class="index-link">
            <div class="index-link-item">
                <%= link_to "Show", book_path(book.id) %>
            </div>
            <div class="index-link-item">
                <%= link_to "Edit", edit_book_path(book.id) %>
            </div>
            <div class="index-link-item">
                <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
            </div>
        </td>
    </tr>
    <% end %>

</table>
<h1>New Book</h1>

<% if @book.errors.any? %>
    <div class="error">
        <div class="error-sentence">
            <%= @book.errors.count %> error prohibitted this book from being saved:
        </div>
    <ul class="error-list">
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    </div>


<% end %>
    <div class="new-contents">
        <%= form_with model: @book, url: '/books', local: true do |f| %>
        <div class="new-contents-item">
                <%= f.label :title, "Title" %><br>
                <%= f.text_field :title %>
        </div>
        <div class="new-contents-item">
            <%= f.label :body, "Body" %><br>
            <%= f.text_area :body %>
        </div>
        <div class="new-contents-item">
            <%= f.submit 'Create Book' %>
        </div>
        <% end %>

    </div>





