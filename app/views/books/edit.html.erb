<h1>Editing Book</h1>
  <% if @book.errors.any? %>
<div class="error">
    <div class="error-sentence">
        <%= @book.errors.count %> error prohibitted this book from being saved:
    </div>
        <ul class="error-list">
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
</div>



<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
<div class="edit-contents">
    <div class="edit-contents-item">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="edit-contents-item">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="edit-contents-item">
      <%= f.submit 'Update Book' %>
    </div>
<% end %>


</div>
<div class="edit-link">
    <%= link_to "Show", book_path %>
    ï½œ
    <%= link_to "Back", index_path %>
</div>
